<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aakash.ods.ODS3"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/appoinment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up to Get Faster Doctor Appoinment"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="27dp" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_above="@+id/email1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/email1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="147dp"
        android:layout_above="@+id/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Mobile Number"
        tools:layout_editor_absoluteY="212dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/password1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="272dp"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/signup"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="415dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp" />


</RelativeLayout>
